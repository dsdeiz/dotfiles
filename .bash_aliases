# Custom aliases.
alias drush='$HOME/.drush/drush'
alias twidgecheck='(twidge lsrecent -asu; twidge lsreplies -asu) | less'
alias wget='wget -c --no-check-certificate -U Mozilla'
alias mv='mv -i'
alias drupaltags='ctags --langmap=php:.engine.inc.module.theme.php --php-kinds=cdfi --languages=php --recurse'

# Path aliases
alias ..='cd ../..'
alias ...='cd ../../..'
alias ....='cd ../../../..'
