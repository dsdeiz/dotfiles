# General

set $mod Mod4

font -*-terminus-*-*-*-*-12-*-*-*-*-*-*-*

bindsym $mod+Return exec i3-sensible-terminal

bindsym $mod+Shift+Q kill

bindsym $mod+d exec dmenu_run

bindsym $mod+Shift+C reload

bindsym $mod+Shift+R restart

bindsym $mod+Shift+E exit

focus_follows_mouse no

workspace_auto_back_and_forth yes

# Layouts

floating_modifier Mod4

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle

# Clients

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

bindsym $mod+f fullscreen

# Containers

bindsym $mod+semicolon split h

bindsym $mod+v split v

bindsym $mod+a focus parent

# Workspaces

set $workspace_1 "1: www"
set $workspace_2 "2: dev"
set $workspace_3 "3: im"
set $workspace_4 "4: stuffs"
set $workspace_5 "5: stuffs"
set $workspace_6 "6: stuffs"
set $workspace_7 "7: stuffs"
set $workspace_8 "8: stuffs"
set $workspace_9 "9: stuffs"
set $workspace_10 "10: stuffs"

bindsym $mod+1 workspace $workspace_1
bindsym $mod+2 workspace $workspace_2
bindsym $mod+3 workspace $workspace_3
bindsym $mod+4 workspace $workspace_4
bindsym $mod+5 workspace $workspace_5
bindsym $mod+6 workspace $workspace_6
bindsym $mod+7 workspace $workspace_7
bindsym $mod+8 workspace $workspace_8
bindsym $mod+9 workspace $workspace_9
bindsym $mod+0 workspace $workspace_10

bindsym $mod+Shift+exclam move container to workspace $workspace_1
bindsym $mod+Shift+at move container to workspace $workspace_2
bindsym $mod+Shift+numbersign move container to workspace $workspace_3
bindsym $mod+Shift+dollar move container to workspace $workspace_4
bindsym $mod+Shift+percent move container to workspace $workspace_5
bindsym $mod+Shift+asciicircum move container to workspace $workspace_6
bindsym $mod+Shift+ampersand move container to workspace $workspace_7
bindsym $mod+Shift+asterisk move container to workspace $workspace_8
bindsym $mod+Shift+parenleft move container to workspace $workspace_9
bindsym $mod+Shift+parenright move container to workspace $workspace_10

workspace $workspace_1 output LVDS1
workspace $workspace_2 output VGA1

# Resizing mode

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Bar

bar {
        status_command i3status
        font -*-terminus-*-*-*-*-12-*-*-*-*-*-*-*
}

# Audio

bindcode 122 exec --no-startup-id amixer -q sset Master 5-
bindcode 123 exec --no-startup-id amixer -q sset Master 5+

# Scratchpads

exec urxvtc -name scratchpad
bindsym $mod+u [instance="scratchpad"] scratchpad show
for_window [instance="scratchpad"] move scratchpad

exec urxvtc -name htop -e htop
bindsym $mod+i [instance="htop"] scratchpad show
for_window [instance="htop"] move scratchpad
