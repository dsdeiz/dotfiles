style "vimfix" {
  bg[NORMAL] = "#000000" # this matches my gvim theme 'Normal' bg color.
}
widget "vim-main-window.*GtkForm" style "vimfix"

gtk-toolbar-icon-size=GTK_ICON_SIZE_SMALL_TOOLBAR
